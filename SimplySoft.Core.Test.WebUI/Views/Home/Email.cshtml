@model SimplySoft.Core.Test.WebUI.Models.MailModel

@{
    ViewData["Title"] = "Email";
}

<h1 style="font-weight:300">Notification</h1>

<h4>Email</h4>
<hr />

@if (Model?.ResponseMessage != null)
{
    @await Html.PartialAsync("~/Views/Partial/_ResponseMessage.cshtml", Model.ResponseMessage)
}

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="Email">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Message" class="control-label"></label>
                <input asp-for="Message" class="form-control" />
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
