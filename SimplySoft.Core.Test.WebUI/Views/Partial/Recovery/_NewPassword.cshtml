@model SimplySoft.Core.Test.WebUI.Models.StartModel

<div class="text-center mb-4">
    <h4 class="title">Account Recovery</h4>
    <p class="subtitle">Enter new password for your ChargeNET account and confirm it below</p>
</div>
<div class="flex-form animate__animated animate__fadeInRight animate__fast">
    <div>
        <label class="subtitle cn-text-dark font-weight-500 mb-1">New Password</label>
        <input asp-for="ResetPasswordPrompt.Password" type="password" placeholder="Enter the password" class="input-box" />
        <span asp-validation-for="ResetPasswordPrompt.Password" class="validation-message"></span>
    </div>
    <div>
        <label class="subtitle cn-text-dark font-weight-500 mb-1">Confirm Password</label>
        <input asp-for="ResetPasswordPrompt.ConfirmPassword" type="password" placeholder="Re-enter the password" class="input-box" />
        <span asp-validation-for="ResetPasswordPrompt.ConfirmPassword" class="validation-message"></span>
    </div>
    <div class="text-right">
        <input type="submit" style="width: 80px;" value="Next" class="cn-btn cn-btn-primary" />
    </div>
</div>