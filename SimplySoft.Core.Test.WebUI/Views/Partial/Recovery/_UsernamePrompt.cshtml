@model SimplySoft.Core.Test.WebUI.Models.StartModel

<div class="text-center mb-4">
    <h4 class="title">Account Recovery</h4>
    <p class="subtitle">Help us by providing following information to recover your ChargeNET account</p>
</div>
<div class="flex-form animate__animated animate__fadeInRight animate__fast">
    <div>
        <label class="subtitle cn-text-dark mb-3">Enter the username you are trying to recover</label>
        <input asp-for="UsernamePrompt.Username" type="text" placeholder="Username" class="input-box" />
        <span asp-validation-for="UsernamePrompt.Username" class="validation-message"></span>
    </div>
    <div class="text-right">
        <input type="submit" style="width: 80px;" value="Next" class="cn-btn cn-btn-primary" />
    </div>
</div>